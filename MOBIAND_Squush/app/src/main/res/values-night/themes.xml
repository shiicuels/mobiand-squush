<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MOBIAND_Squush" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/darksoft_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_green</item>
        <item name="colorSecondaryVariant">@color/primary_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="lettersButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="backgroundTint">@color/darksoft_gray</item>
    </style>

    <style name="subButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="backgroundTint">@color/darksoft_gray</item>
    </style>

    <style name="guessWord" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="scoreTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="catButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">5dp</item>
        <item name="backgroundTint">@color/darksoft_gray</item>
        <item name="android:textColor">@color/primary_green</item>
    </style>


    <style name="longText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>